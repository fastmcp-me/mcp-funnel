{
  "name": "mcp-funnel",
  "version": "0.0.4",
  "description": "MCP proxy that aggregates multiple servers with tool filtering - stop carrying 70k tokens of tools you'll never use",
  "author": "Christoph Schramm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chris-schra/mcp-funnel.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "proxy",
    "aggregator",
    "filter"
  ],
  "type": "module",
  "bin": "./dist/cli.js",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "files": [
    "dist/",
    "!dist/**/*.map"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsx build.ts",
    "build:watch": "tsx build.ts --watch",
    "release": "yarn npm audit && npm publish --access public"
  },
  "dependencies": {
    "@mcp-funnel/commands-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "deepmerge-ts": "^7.0.5",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.112",
    "@hono/zod-validator": "^0.7.2",
    "@types/node": "^24.3.1",
    "esbuild": "^0.25.9",
    "globby": "^14.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.9.2"
}
